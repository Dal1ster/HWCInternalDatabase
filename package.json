{
	"name": "haltmann-archives",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:all": "npm run build:oracle && npm run build:rebirth && npm run build:siivacam && npm run build:troll && npm run build:teeth && npm run build:problem-one && npm run build:problem-two && npm run build:noaka && npm run build:cs50x && npm run build:thesafe && npm run build:oracle2",
		"build:oracle": "cross-env MODULE_NAME=Oracle vite build --config vite.build-executable.config.ts",
		"build:oracle2": "cross-env MODULE_NAME=Oracle2 vite build --config vite.build-executable.config.ts",
		"build:rebirth": "cross-env MODULE_NAME=Rebirth vite build --config vite.build-executable.config.ts",
		"build:siivacam": "cross-env MODULE_NAME=SiivaCam vite build --config vite.build-executable.config.ts",
		"build:problem-one": "cross-env MODULE_NAME=Problem_One vite build --config vite.build-executable.config.ts",
		"build:problem-two": "cross-env MODULE_NAME=Problem_Two vite build --config vite.build-executable.config.ts",
		"build:troll": "cross-env MODULE_NAME=Troll vite build --config vite.build-executable.config.ts",
		"build:teeth": "cross-env MODULE_NAME=Teeth vite build --config vite.build-executable.config.ts",
		"build:cs50x": "cross-env MODULE_NAME=CS50x vite build --config vite.build-executable.config.ts",
		"build:noaka": "cross-env MODULE_NAME=Noaka vite build --config vite.build-executable.config.ts",
		"build:thesafe": "cross-env MODULE_NAME=TheSafe vite build --config vite.build-executable.config.ts",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"deploy": "git pull && npm run build && pm2 restart ecosystem.config.cjs"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.2.10",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@types/es6-promisify": "^6.0.4",
		"@types/eslint": "^9.6.0",
		"@types/sanitize-html": "^2.13.0",
		"cross-env": "^7.0.3",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3"
	},
	"type": "module",
	"dependencies": {
		"@types/node": "^22.10.10",
		"class-transformer": "^0.5.1",
		"class-transformer-validator": "^0.9.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.5",
		"es6-promisify": "^7.0.0",
		"express": "^4.21.2",
		"file-type": "^19.5.0",
		"marked": "^14.1.2",
		"nanoid": "^5.0.7",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.2",
		"sanitize-html": "^2.13.0",
		"sound-fx": "^2.1.0",
		"svelte-kit-connect-redis": "^0.1.0",
		"svelte-kit-sessions": "^0.3.2",
		"typed.js": "^2.1.0",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0"
	}
}
